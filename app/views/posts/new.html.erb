<h1>New post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b><%= title_label %></b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b><%= body_label %></b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b><%= excerpt_label %></b><br />
    <%= f.text_area :excerpt %>
  </p>

  <p>
    <b><%= is_published_label %></b><br />
    <%= f.check_box :is_published %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
